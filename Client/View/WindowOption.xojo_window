#tag Events tbRepoRootFolder
	#tag Event
		Sub Opening()
		  me.Text = App.Config.RepositoryRootFolder
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events btnSelectRootFolder
	#tag Event
		Sub Pressed()
		  Var dlg As New SelectFolderDialog
		  dlg.ActionButtonCaption = "Select"
		  dlg.Title = "Select Repository Rootfolder"
		  dlg.PromptText = "Select Repository Rootfolder"
		  dlg.InitialFolder = SpecialFolder.Documents
		  
		  Var f As FolderItem
		  f = dlg.ShowModal
		  If f <> Nil Then
		    tbRepoRootFolder.Text = f.NativePath
		  Else
		    // User cancelled
		  End If
		End Sub
	#tag EndEvent
