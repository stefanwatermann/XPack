#tag Events btnSave
	#tag Event
		Sub Pressed()
		  app.Config.RepositoryRootFolder = tbRepoRootFolder.Text
		  app.Config.Save
		  
		  Self.Close 
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events btnCancel
